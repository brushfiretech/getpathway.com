<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>@String.Format(titleFormat, Page.Title)</title>
	<meta name="description" content="Get Pathway Web Site, Created 12/2011">
	<meta name="author" content="Jorin Slaybaugh, Clayton Waters, Stan Coker">

	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="shortcut icon" href="@Href("~/img/favicon.ico")">
	<script type="text/javascript" src="@Href("~/scripts/modernizr-2.0.6.min.js")"></script>
	<script type="text/javascript" src="http://use.typekit.com/llm7jrh.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
	<link rel="stylesheet" type="text/css" href="@Href("~/css/style.css")" />
	<link rel="stylesheet" type="text/css" href="@Href("~/css/960_16_col.css")" />
	@if (IsSectionDefined("styles"))
	{
		@RenderSection("styles")
	}
</head>
<body>
	<div class="header blu-grad">
		<div class="container_16">
			<div class="grid_5">
				<a href="/getpathway"><span class="logo">Pathway</span></a>
			</div>
			<div class="grid_11">
				<ul class="nav pills right">
					<li class="active"><a href="features">Features</a></li>
					<li><a href="plans">Plans</a></li>
					<li><a href="signup">Sign Up</a></li>
					<li><a href="#">Contact</a></li>
					<li><a href="https://pathwayapp.com/accounts/login">Login</a></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="primary">
		@RenderBody()
	</div>
	<div class="footer blk-grad">
		<div class="footer-content container_16">
			<div class="grid_8" style="padding-top:6px;">
				<p>
					Pathway &copy; 2011. E-vent Software, Inc.<br />
					(999) 999-9999 // <a href="mailto:info@getpathway.com">info@getpathway.com</a><br />
					Helping you connect, reach &amp; grow.
				</p>
			</div>
			<div class="rgt-align grid_8">
				<div class="right" style="width:137px;">
					<a href="https://twitter.com/pathwayapp" class="twitter-follow-button" data-show-count="false" data-lang="en">Follow @@pathwayapp</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
