					<iframe src="https://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.facebook.com%2FBrushfireSoftware&amp;layout=button_count&amp;show_faces=false&amp;width=86&amp;action=like&amp;font=lucida+grande&amp;colorscheme=light&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:86px; height:21px;" allowtransparency="true"></iframe>
				</div>
				<div class="clear"></div>
				<p>We'd love to hear what you think about Pathway,<br />connect with us on Twitter or Facebook.</p>
			</div>
		</div>
	</div>

	@if (IsSectionDefined("templates"))
	{
		@RenderSection("templates")
	}
	<!--
		our script references go here
	-->
	@if (IsSectionDefined("scripts"))
	{ 
		@RenderSection("scripts")
	}
