<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>@String.Format(titleFormat, Page.Title)</title>
	<meta name="description" content="Get Pathway Web Site, Created 12/2011">
	<meta name="author" content="Jorin Slaybaugh, Clayton Waters, Stan Coker">

	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="shortcut icon" href="@Href("~/img/favicon.ico")">
	<link rel="stylesheet" type="text/css" href="@Href("~/css/formalize/formalize.css")" />
	<script type="text/javascript" src="http://use.typekit.com/llm7jrh.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
	<link rel="stylesheet" type="text/css" href="@Href("~/css/jquery-ui/jquery-ui-1.8.16.custom.css")" />
	<link rel="stylesheet" type="text/css" href="@Href("~/css/style.css")" />
	<link rel="stylesheet" type="text/css" href="@Href("~/css/960_16_col.css")" />

	@if (IsSectionDefined("styles"))
	{
		@RenderSection("styles")
	}
	<script type="text/javascript">
	
	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-28820709-1']);
	  _gaq.push(['_trackPageview']);
	
	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
	
	</script>	
</head>
<body>
	<div class="header blu-grad">
		<div class="container_16">
			<div class="grid_5">
				<a href="@Href("~/")"><span class="logo">Pathway</span></a>
			</div>
			<div class="grid_11">
				<ul class="nav pills right">
					<li class="@(Page.Current.ToLower() == "home" ? "active" : "")"><a href="@Href("~/")">Home</a></li>
					<li class="@(Page.Current.ToLower() == "features" ? "active" : "")"><a href="@Href("~/features")">Features</a></li>
					<li class="@(Page.Current.ToLower() == "plans" ? "active" : "")"><a href="@Href("~/plans")">Plans</a></li>
					<li><a href="https://pathwayapp.com/signup">Sign Up</a></li>
					<li><a id="btnContact" href="#">Contact</a></li>
					<li><a href="https://pathwayapp.com/accounts/login">Login</a></li>
				</ul>
			</div>
		</div>
	</div>
	@RenderBody()
	<div class="footer">
		<div class="footer-content container_16">
			<div class="grid_8">
				<p>
					Pathway &copy; @DateTime.Now.Year E-vent Software, Inc. All Rights Reserved.<br />
					<i>Helping you connect, reach &amp; grow.</i> | <a href="@Href("~/legal")">Legal</a>.
				</p>
			</div>
			<div class="grid_8" style="padding-top:7px;">
				<div class="right" style="width:137px;padding-top:1px;">
					<a href="https://twitter.com/pathwayapp" class="twitter-follow-button" data-show-count="false" data-lang="en">Follow @@pathwayapp</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
				</div>
				<div class="right" style="width:24px;margin-right:10px">
					<a href="http://twitter.com/pathwayapp" class="inline-block"><span class="twitter"></span></a>
				</div>
				<div class="right" style="padding-top:1px;">
					<iframe src="//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.facebook.com%2Fpages%2FPathway%2F149097661837216&amp;send=false&amp;layout=button_count&amp;width=86&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font=arial&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:86px; height:21px;" allowtransparency="true"></iframe>
				</div>
				<div class="right" style="width:24px;margin-right:10px;">
					<a href="http://on.fb.me/getpathway" class="inline-block"><span class="facebook"></span></a>
				</div>
			</div>
		</div>
	</div>
	<div id="frmContact" style="display:none;">
		<div class="clearfix" style="padding-bottom:10px;">
			<p><b>Questions or comments?</b><br />Connect with our team on Twitter or Facebook.</p>
			<div class="left" style="width:137px;margin-right:10px;padding-top:2px;">
				<a href="https://twitter.com/pathwayapp" class="twitter-follow-button" data-show-count="false" data-lang="en">Follow @@pathwayapp</a>
				<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
			</div>
			<div class="left" style="width:24px;margin-right:10px">
				<a href="http://twitter.com/pathwayapp" class="inline-block"><span class="twitter"></span></a>
			</div>
			<div class="left" style="padding-top:2px;">
				<iframe src="//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.facebook.com%2Fpages%2FPathway%2F149097661837216&amp;send=false&amp;layout=button_count&amp;width=86&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font=arial&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:86px; height:21px;" allowtransparency="true"></iframe>
			</div>
			<div class="left" style="width:24px">
				<a href="http://on.fb.me/getpathway" class="inline-block"><span class="facebook"></span></a>
			</div>
		</div>
		<div style="padding-bottom:10px;">
			<p><b>Drop us a line!</b></p>
			<p>If you have any questions or comments about Pathway, we'd love to hear from you. Email us at <a style="font-weight:600;" href="mailto:info@getpathway.com?subject=Information Request (getpathway.com)&body=Organization: %0DEmail: %0DPhone: %0DQuestions/Comments: %0D">info@getpathway.com</a>.<br /><br />You can always <a href="https://pathwayapp.com/signup" style="font-weight:600;">Sign Up</a> to get to know Pathway a little better.</p>
		</div>
		<div>
			<p><b>Billing or Account Questions?</b></p>
			<p>Have questions about your billing statements or need to have your account reinstated? Call us at <span style="font-weight:600;">1-800-506-0826</span>.</p>
		</div>
	</div>

	@if (IsSectionDefined("templates"))
	{
		@RenderSection("templates")
	}
	<script type="text/javascript" src="@Href("~/scripts/modernizr-2.0.6.min.js")"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
	<script type="text/javascript" src="@Href("~/scripts/jquery-ui-1.8.16.custom.min.js")"></script>
	<script type="text/javascript" src="@Href("~/scripts/jquery.formalize.min.js")"></script>
	<script type="text/javascript" src="@Href("~/scripts/bootstrap-twipsy.js")"></script>
	<script type="text/javascript" src="@Href("~/scripts/bootstrap-popover.js")"></script>	
	<script type="text/javascript">
		$(function()
		{
			$(".toggle-btn").click(function()
			{
				$(this).parent("div").find(".toggle-content").toggle("slow");
			});
		
			$("#btnContact").click(function()
			{
				$("#frmContact").dialog(
				{
					width: 450,
					height: 345,
					title: "Contact Us",
					draggable:false,
					modal: true,
					resizable: false
				});
				return false;
			});
		});
	</script>
	@if (IsSectionDefined("scripts"))
	{ 
		@RenderSection("scripts")
	}
	<!--[if lt IE 8 ]>
		<script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
		<script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
	<![endif]-->
</body>
</html>